<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bmicalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.bmicalculator.Splash"
            android:label="@string/title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.bmicalculator.WelcomeScreen"
            android:label="@string/app_name"/>
        
        <activity
            android:name="com.example.bmicalculator.TableResult"
            android:label="@string/app_name"/>
        
        <activity
            android:name="com.example.bmicalculator.MainActivity"
            android:label="@string/app_name"/>
        
        <activity
            android:name="com.example.bmicalculator.AddEditCountry"
            android:label="@string/app_name"/>
        
        <activity
            android:name="com.example.bmicalculator.DatabaseConnector"
            android:label="@string/app_name" />
        
        <activity
            android:name="com.example.bmicalculator.ViewCountry"
            android:label="@string/app_name" />
        
        <activity
            android:name="com.example.bmicalculator.BMISrc"
            android:label="@string/app_name" />
        
        <activity
            android:name="com.example.bmicalculator.GraphResult"
            android:label="@string/app_name" />
    </application>

</manifest>